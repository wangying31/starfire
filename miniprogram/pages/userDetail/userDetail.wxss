.edit-img {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 16rpx;
  right: 16rpx;
  /* color: white; */
  text-align: center;
  z-index: 9999;
}

.show-img {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.add-fans {
  position: absolute;
  width: 84rpx;
  height: 48rpx;
  line-height: 48rpx;
  z-index: 9999;
  /* background-color: rgba(255, 255, 255, 0.3); */
  background-color: #f47695;
  font-size: 22rpx;
  text-align: center;
  /* border: 2rpx solid rgba(255, 255, 255, 0.3); */
  right: 20rpx;
  top: 20rpx;
  color: white;
  transition: all .3s ease;
}

.fans-watch {
  width:100%;
  z-index:9999;
  position:relative;
  height:68rpx;
  line-height:68rpx;
  top: -38rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: white;
}

.watch {
  width: 50%;
  text-align: right;
  padding-right: 10rpx;
  box-sizing: border-box;
}

.fans {
  width: 50%;
  text-align: left;
  padding-left: 10rpx;
  box-sizing: border-box;
}

.wux-textarea__label {
  width: 166rpx!important;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}
