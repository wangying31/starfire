.index-choose {
  width: 92%;
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
  flex-flow: row wrap;
  font-size: 26rpx;
  font-weight: bold;
  justify-content: center;
  margin: 0 auto;
}

.index-choose-list {
  width: 30%;
  height: 100%;
  text-align: center;
}

