.animationSlow {
  animation-name: myfirst; /*动画的名称 */
  animation-duration: 1600ms; /*动画从开始到结束的时间*/
  animation-timing-function: ease-in-out; /*动画执行快慢的参数*/
  animation-iteration-count: infinite; /*动画执行多少次的参数*//*以下是兼容ios所需，参数意义与上相同*/
  -webkit-animation-name: myfirst;
  -webkit-animation-duration: 1600ms;
  -webkit-animation-timing-function: ease-in-out;
  -webkit-animation-iteration-count: infinite;
}

.animationSlow1 {
  animation-name: myfirst; /*动画的名称 */
  animation-duration: 1600ms; /*动画从开始到结束的时间*/
  animation-timing-function: ease-in-out; /*动画执行快慢的参数*/
  animation-iteration-count: infinite; /*动画执行多少次的参数*//*以下是兼容ios所需，参数意义与上相同*/
  -webkit-animation-name: myfirst1;
  -webkit-animation-duration: 1600ms;
  -webkit-animation-timing-function: ease-in-out;
  -webkit-animation-iteration-count: infinite;
}

.animationSlow1 image {
  transform: rotateY(180deg) rotateX(180deg);
}

.animationSlow-pause {
  animation-play-state: paused;
}

@keyframes myfirst {
  /*开始转的角度*/
  0% {
          transform: rotate(0deg);
      }
      100% {
          transform: rotate(360deg);
      }
}
/*兼容ios*/
@-webkit-keyframes myfirst {
  0% {
          transform: rotate(0deg);
      }
      100% {
          transform: rotate(360deg);
      }
}

@keyframes myfirst1 {
  /*开始转的角度*/
  0% {
          transform: rotate(0deg);
      }
      100% {
          transform: rotate(-360deg);
      }
}
/*兼容ios*/
@-webkit-keyframes myfirst1 {
  0% {
          transform: rotate(0deg);
      }
      100% {
          transform: rotate(-360deg);
      }
}


