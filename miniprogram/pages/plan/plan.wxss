.plan {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.plan-header {
  position: absolute;
  width: 100%;
  left: 0;
  top: 0;
  height: 90rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-around;
}

.plan-center {
  position: absolute;
  top: 18rpx;
  bottom: 150rpx;
  width: 100%;
  left: 0;
  overflow-y: auto;
}

.plan-footer {
  position: absolute;
  height: 150rpx;
  bottom: 0;
  width: 100%;
  left: 0;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
}

.update {
  background-color: #f47695;
  color: white;
  box-shadow: 0 2px 5px 1px rgba(0, 0, 0, 0.1);
  width: 92%;
  transition: all .3s ease;
}

.update::after {
  border: none;
}

.planBtn {
  background-color: #f47695;
  color: white;
  box-shadow: 0 2px 5px 1px rgba(0, 0, 0, 0.1);
  width: 26%;
  height: 52rpx;
  font-size: 22rpx;
  line-height: 52rpx;
}

.planBtn::after {
  border: none;
}

.plan-list {
  width: 94%;
  height: 120rpx;
  overflow: hidden;
  background-color: rgb(241, 241, 241);
  margin: 0 auto 20rpx auto;
  position: relative;
}

