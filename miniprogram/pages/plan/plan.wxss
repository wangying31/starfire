  top: 0;
  bottom: 0;
  left: 0;
  width: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.plan-list-left image {
  width: 36rpx;
  height: 36rpx;
}

.plan-list-center {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 70rpx;
  right: 0;
  z-index: 98;
}

