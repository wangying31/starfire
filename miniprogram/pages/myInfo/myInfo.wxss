.page {
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: rgba(242, 242, 242, 1);
}

.myInfo-wrap {
  width: 100%;
  height: auto;
  /* position: absolute; */
  /* top: 20rpx; */
  /* bottom: 30rpx; */
  /* left: 3%; */
  margin: 0rpx auto 30rpx auto;
  border: 4rpx solid white;
  box-shadow:0 0 8rpx rgb(233,233,233);
  /* box-shadow:0 2px 5px 1px rgba(0, 0, 0, 0.1); */
}

.myInfo-left>image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 26rpx;
  float: left;
  margin-right: 14rpx;
  position: relative;
  top: 2rpx;
}

.myInfo-detail {
  width: 100%;
  height: auto;
  background-color: rgba(242, 242, 242, 1);
  /* border-radius: 8rpx; */
  /* box-shadow:0 0 8rpx rgb(210,210,210); */
}

.myInfo-detail-list {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  background-color: rgb(255, 255, 255);
  margin-bottom: 8rpx;
  font-size: 32rpx;
  color: #535353;
  position: relative;
  /* border-bottom: 2rpx solid rgba(233, 233, 233, 1); */
  /* box-shadow:0 2px 5px 1px rgba(0, 0, 0, 0.1); */
}

.myInfo-detail-list .myInfo-left {
  width: 200rpx;
  height: 100%;
  display: inline-block;
  color: rgb(252,178,103);
  font-size: 28rpx;
}

.myInfo-detail-list .myInfo-left text {
  color: #535353;
}



.myInfo-detail-list .myInfo-input {
  position: absolute;
  left: 220rpx;
  right: 0;
  top: 0;
  height: 100%;
  box-sizing: border-box;
  padding-right: 20rpx;
  color: #535353;
  font-size: 28rpx;
  overflow: hidden;
}

.myInfo-detail-list .myInfo-input picker {
  height: 100%;
  width: 100%;
  line-height: 96rpx;
  text-align: right;
  color: #535353;
}

.myInfo-detail-list .myInfo-input .picker {
  color: #535353;
}

.myInfo-detail-list .myInfo-input input {
  height: 100%;
  width: 100%;
  line-height: 96rpx;
  text-align: right;
}


.myInfo-center {
  width: 100%;
  height: 270rpx;
  /* background-color: rgb(242, 242, 242); */
  margin-top: 2rpx;
  padding: 20rpx 26rpx;
  box-sizing: border-box;
  /* border-radius: 8rpx; */
  background-color: white;
  /* box-shadow:0 0 8rpx rgb(210,210,210); */
}

.myInfo-center textarea {
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  color: #535353;
}

.myInfo-btn {
  position: absolute;
  bottom: 20rpx;
  width: 100%;
  background-color: rgb(255, 215, 3);
  color: black;
  box-shadow:0 0 8rpx rgb(210,210,210);
}

.myInfo-color {
  color: #535353;
}

.textarea-sm {
  font-size: 26rpx;
}

.edit-textarea-length {
  position: absolute;
  width: auto;
  height: 60rpx;
  right: 0rpx;
  bottom: -10rpx;
  text-align: center;
  line-height: 60rpx;
  color: rgb(182, 182, 182);
  font-size: 22rpx;
}

.update {
  background-color: #f47695;
  color: white;
  box-shadow: 0 2px 5px 1px rgba(0, 0, 0, 0.1);
  position: fixed;
  bottom: 20rpx;
  left: 2%;
  right: 2%;
}

.update::after {
  border: none;
}